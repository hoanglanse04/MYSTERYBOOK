@model IEnumerable<MisteryBook.Models.DonHang>
<style>
    .badge-custom {
        font-size: 0.9rem;  /* Tăng kích thước chữ */
        padding: 0.5em 1em; /* Tăng khoảng cách trong badge */
    }
    .btn-sm {
    padding: 5px;
}

    .fas {
        font-size: 14px; /* Điều chỉnh kích thước icon */
    }
</style>
@{
    ViewData["Title"] = "Tra cứu đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@{
}
@if (Model != null && Model.Any())
{
    
  <div class="page-inner">
            <div class="page-header">
                <h3 class="fw-bold mb-3">Tra cứu đơn hàng</h3>
                <ul class="breadcrumbs mb-3">
                    <li class="nav-home">
                        <a href="#">
                            <i class="fas fa-user-circle"></i>
                        </a>
                    </li>
                    <li class="separator">
                        <i class="icon-arrow-right">></i>
                    </li>
                    <li class="nav-item">
                        <a href="#">Đơn hàng</a>
                    </li>
                    <li class="separator">
                        ><i class="icon-arrow-right"></i>
                    </li>
                    <li class="nav-item">
                        <a href="#">Tra cứu đơn hàng</a>
                    </li>
                </ul>
            </div>
       


<div class="filter-section">
    <form method="get" >
        
        <div class="row mb-3">
        
            <div class="col-md-1 d-flex align-items-end">
               <h3 class="" >Bộ lọc:</h3>    
            </div>
            <div class="col-md-2">
                <label for="TrangThai" class="form-label">Trạng Thái</label>
                <select id="TrangThai" name="TrangThai" class="form-select">
                    <option value="">Tất cả</option>
                    <option value="Chờ Xử Lý">Chờ Xử Lý</option>
                    <option value="Đang Xử Lý">Đang Xử Lý</option>
                    <option value="Thành Công">Thành Công</option>
                    <option value="Thất Bại">Thất Bại</option>
                    <option value="Đang giao hàng">Đang giao hàng</option>
                </select>
            </div>

           
            <div class="col-md-2">
                <label for="ThoiGian" class="form-label">Từ Ngày</label>
                <input type="date" id="ThoiGian" name="ThoiGian" class="form-control" />
            </div>
            
            <div class="col-md-2">
                <label for="ThoiGian" class="form-label">Đến Ngày</label>
                <input type="date" id="ThoiGian" name="ThoiGian" class="form-control" />
            </div>

             <div class="col-md-3">
                <label for="Search" class="form-label">Tìm Kiếm</label>
                <input type="text" id="Search" name="Search" class="form-control" placeholder="Tìm mã đơn hàng, khách hàng..." />
            </div>
        </div>
    </form>
</div>
<div class="mb-3">
    <a href="" class="btn btn-success">
        Thêm Mới Đơn Hàng
    </a>
</div>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Số Đơn Hàng</th>
            <th>Mã KH</th>
            <th>Mã NV</th>
            <th>Ngày Lập</th>
            <th>Tổng Số Lượng</th>
            <th>Tổng Tiền</th>
            <th>Trạng Thái</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SoDonHang</td>
               <td>@item.MaKhNavigation?.HoTen </td>
                <td>@item.MaNvNavigation?.HoTen </td>
                <td>@item.NgayLap?.ToString("dd/MM/yyyy")</td>
                <td>@item.TongSoLuong</td>
                <td>@item.TongTien?.ToString("C")</td>
                <td>
                    @if(item.TrangThai == "Chờ Xử Lý")
                    {
                        <span class="badge badge-custom bg-warning">@item.TrangThai</span>
                    }
                    else if(item.TrangThai == "Đang Xử Lý")
                    {
                        <span class="badge badge-custom bg-primary">@item.TrangThai</span>
                    }
                    else if(item.TrangThai == "Thành Công")
                    {
                        <span class="badge badge-custom bg-success">@item.TrangThai</span>
                    }
                    else if(item.TrangThai == "Thất Bại")
                    {
                        <span class="badge badge-custom bg-danger">@item.TrangThai</span>
                    }
                    else if(item.TrangThai == "Đang Giao Hàng")
                    {
                        <span class="badge badge-custom bg-info">@item.TrangThai</span>
                    }
                    else
                    {
                        <span class="badge badge-custom bg-secondary">@item.TrangThai</span>
                    }
                </td>
                <td>
                    <a href="" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i>

                    </a>
                    <a href="" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="" class="btn btn-danger btn-sm">
                         <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>




</div>
}
else
{
    <p>Không có dữ liệu.</p>
}


